<?xml version="1.0" encoding="utf-8"?>

<odoo>


    <record id="product_category_ehanced_form_view" model="ir.ui.view">
        <field name="name">ehanced.product.category.form</field>
        <field name="model">product.category</field>
        <field name="inherit_id" ref="product.product_category_form_view"/>
        <field name="arch" type="xml">

            <xpath expr="//group[@name='first']" position="after">
                <group name="product_code" string="Génération des Codes Produits">
                    <field name="nature_code_id"
                           attrs="{'invisible': [('parent_nature_code', '!=', False)]}"/>
                    <field name="parent_nature_code"
                           attrs="{'invisible': [('nature_code_id', '!=', False)]}"/>
                    <field name="gamme_code_id"
                           attrs="{'invisible': [('nature_code_id', '==', False), ('parent_gamme_code', '!=', False)]}"/>
                    <field name="parent_gamme_code"
                           attrs="{'invisible': [('|'), ('gamme_code_id', '!=', False), ('parent_gamme_code', '==', False)]}"/>
                    <field name="display_current_sequence"/>

                </group>
            </xpath>

        </field>
    </record>


</odoo>
