<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <record model="ir.ui.view" id="view_country_state_area_form">
             <field name="name">Country's state with areas</field>
            <field name="model">res.country.state</field>
            <field name="inherit_id" ref="base.view_country_state_form"/>
            <field name="type">form</field>
            <field name="arch" type="xml">
                 <xpath expr="//form/group" position="replace">
                    <group col="4">
                        <field name="name" select="1" required="True" class="oe_inline"/>
                        <field name="code" required="True" class="oe_inline"/>
                        <field name="country_id" required="True"/>
                        <field name="areas_count" readonly="True" class="oe_inline"/>
                    </group>
                    <group>
                        <field name="area_ids" required="False"/>
                    </group>
                 </xpath>
            </field>
        </record>

        <record model="ir.ui.view" id="view_country_state_tree">
            <field name="name">States lits</field>
            <field name="model">res.country.state</field>
            <field name="inherit_id" ref="base.view_country_state_tree"/>
            <field name="type">tree</field>
            <field name="arch" type="xml">
                <xpath expr="//tree" position="replace">
                    <tree string="States">
                        <field name="name"/>
                        <field name="code"/>
                        <field name="areas_count" string="Nb Areas"/>
                        <field name="country_id"/>
                    </tree>
                </xpath>
            </field>
        </record>

        <record model="ir.actions.act_window" id="base_action_country_state_with_area">
            <field name="name">State Areas list </field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">res.country.state</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
        </record>

    </data>
</odoo>