<odoo>
  <data>
    <!-- explicit list view definition -->
    <record model="ir.ui.view" id="lab_book.list">
      <field name="name">lab_book list</field>
      <field name="model">lab_book.lab_book</field>
      <field name="arch" type="xml">
        <tree>
          <field name="name"/>
          <field name="value"/>
          <field name="value2"/>
        </tree>
      </field>
    </record>

    <!-- actions opening views on models -->
    <record model="ir.actions.act_window" id="lab_book.action_window">
      <field name="name">lab_book window</field>
      <field name="res_model">lab_book.lab_book</field>
      <field name="view_mode">tree,form</field>
    </record>

    <!-- server action to the one above -->
    <record model="ir.actions.server" id="lab_book.action_server">
      <field name="name">lab_book server</field>
      <field name="model_id" ref="model_lab_book_lab_book"/>
      <field name="state">code</field>
      <field name="code">
        action = {
          "type": "ir.actions.act_window",
          "view_mode": "tree,form",
          "res_model": "lab_book.lab_book",
        }
      </field>
    </record>

    <!-- Top menu item -->
    <menuitem name="lab_book" id="lab_book.menu_root"/>
    <!-- menu categories -->
    <menuitem name="Menu 1" id="lab_book.menu_1" parent="lab_book.menu_root"/>
    <menuitem name="Menu 2" id="lab_book.menu_2" parent="lab_book.menu_root"/>
    <!-- actions -->
    <menuitem name="List" id="lab_book.menu_1_list" parent="lab_book.menu_1"
              action="lab_book.action_window"/>
    <menuitem name="Server to list" id="lab_book" parent="lab_book.menu_2"
              action="lab_book.action_server"/>
  </data>
</odoo>